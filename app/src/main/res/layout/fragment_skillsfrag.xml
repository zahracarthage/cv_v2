<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Skillsfrag">

            <TextView
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="170dp"
                android:layout_marginTop="15dp"

                />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/skills"
        android:layout_margin="16dp"

        >
        <TextView
            android:id="@+id/androidSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Android"
            />
        <SeekBar
            android:id="@+id/androidBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="60dp"                    android:max="100"
            android:thumbTint="@color/colorSecondary"
            />
        <TextView
            android:id="@+id/flutterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:text="Flutter"
            />

        <SeekBar
            android:id="@+id/FlutterSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginStart="60dp"                    android:max="100"
            android:thumbTint="@color/colorSecondary"
            />

        <TextView
            android:id="@+id/IosTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="77dp"
            android:text="Ios"
            />

        <SeekBar
            android:id="@+id/IosBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="60dp"                    android:max="100"
            android:thumbTint="@color/colorSecondary"
            />

    </RelativeLayout>

</RelativeLayout>